<% if obj.errors.any? %>
  <div class="alert alert-danger text-start alert-dismissable fade show" role="alert">
    <button type="button" class="btn-close float-end" data-bs-dismiss="alert" aria-label="Close"></button>
    <h1 class="fs-3">This errors prevented the <%= obj.class.name.downcase %> from saving</h1>
    <ul class="m-0">
      <% obj.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
