<div class="container mt-4">
  <h1 class="text-center"><%= @article.title %></h1>
  <div class="row justify-content-center">
    <div class="col-10">
      <div class="card text-center shadow-sm rounded mt-4 mb-5 bg-white">
        <div class="card-header">
          <p class="fst-italic m-0">
            by <%= @article.user.username if @article.user %>
            <%= link_to gravatar_for(@article.user, size: 100), user_path(@article.user) %>
          </p>
        </div>
        <div class="card-body">
          <div class="card-text text-start"><%= simple_format(@article.description) %></div>
          <% if logged_in? && @article.user == current_user %>
            <%= link_to 'Edit', edit_article_path(@article), class: 'btn btn-outline-success' %>
            <%= link_to 'Delete', article_path(@article), class: 'btn btn-outline-danger', method: :delete, data: {confirm: 'Are you sure?'} %>
          <% end %>
        </div>
        <div class="card-footer text-muted">
          <p>Created <%= time_ago_in_words(@article.created_at) %> ago, updated <%= time_ago_in_words(@article.updated_at) %> ago.</p>
        </div>
      </div>
    </div>
  </div>
</div>
