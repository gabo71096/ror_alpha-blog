<%= render 'shared/errors', obj: @article %>
<%= form_with(model: @article, local: true, class: 'shadow p-3 mb-5 bg-white rounded') do |f| %>
  <div class="row mb-3 text-start">
    <%= f.label :title, class: 'col-form-label col-sm-2' %>
    <div class="col-sm-10">
      <%= f.text_field :title, class: 'form-control shadow rounded', placeholder: 'Title' %>
    </div>
  </div>
  <div class="row mb-3 text-start">
    <%= f.label :description, class: 'col-form-label col-sm-2' %>
    <div class="col-sm-10">
      <%= f.text_area :description, rows: 10, class: 'form-control shadow rounded', placeholder: 'Description' %>
    </div>
  </div>
  <%= f.submit class: 'btn btn-primary mb-3' %>
<% end %>
<%= link_to 'Return to articles', articles_path, class: 'btn btn-outline-success' %>
