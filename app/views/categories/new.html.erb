<div class="container text-center my-4">
  <h1>Create category</h1>
    <%= render 'shared/errors', obj: @category %>
    <%= form_with(model: @category, local: true, class: 'shadow-sm p-3 mb-3 card-header rounded') do |f| %>
      <div class="row mb-3 text-start">
        <%= f.label :name, 'Category name', class: 'col-form-label col-sm-2' %>
        <div class="col-sm-10">
          <%= f.text_field :name, class: 'form-control shadow-sm rounded', placeholder: 'Enter a name' %>
        </div>
      </div>
      <%= f.submit(class: 'btn btn-primary') %>
    <% end %>
    <%= link_to 'Return to articles', articles_path, class: 'btn btn-outline-success' %>
</div>
