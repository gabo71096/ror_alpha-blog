<%= render 'shared/errors', obj: @user %>
<%= form_with(model: @user, local: true, class: 'shadow-sm p-3 mb-3 card-header rounded') do |f| %>
  <div class="row mb-3 text-start">
    <%= f.label :username, class: 'col-form-label col-sm-2' %>
    <div class="col-sm-10">
      <%= f.text_field :username, class: 'form-control shadow-sm rounded', placeholder: 'Enter a username' %>
    </div>
  </div>
  <div class="row mb-3 text-start">
    <%= f.label :email, class: 'col-form-label col-sm-2' %>
    <div class="col-sm-10">
      <%= f.email_field :email, class: 'form-control shadow-sm rounded', placeholder: 'Enter an email' %>
    </div>
  </div>
  <div class="row mb-3 text-start">
    <%= f.label :password, class: 'col-form-label col-sm-2' %>
    <div class="col-sm-10">
      <%= f.password_field :password, class: 'form-control shadow-sm rounded', placeholder: 'Enter a password' %>
    </div>
  </div>
  <%= f.submit(@user.new_record? ? 'Sign Up' : 'Edit', class: 'btn btn-primary') %>
<% end %>
<%= link_to 'Return to articles', articles_path, class: 'btn btn-outline-success' %>
